<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juphoon.zeroflll.easydemo.rxjava.RxActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/activity_rx_img_iv"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/activity_rx_title_iv"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4:1"
        android:background="#abcdef"
        android:textSize="20sp"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_rx_img_iv"
        app:layout_constraintRight_toRightOf="@+id/activity_rx_img_iv" />




</android.support.constraint.ConstraintLayout>
